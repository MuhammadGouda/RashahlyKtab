
<div id="bodyContainer"  style="padding-top:2em">
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="flip-container text-center col-md-12" ng-controller="ContributionController as contCtrl" ng-init="contCtrl.getAllConts()">
                    <button class="btn btn-info btn-lg" ng-click="contCtrl.uiHelper.showAddMode()">Join Event</button>
                    <div style="padding-top:2em" id="newEvent" ng-show="contCtrl.uiHelper.addMode" class="form-group-sm text-center">
                        <div class="form-group">
                            <label class="control-label h4" for="txtBookName">Book Title</label>
                            <input class="form-control center-block" type="text" id="txtBookName" ng-model="contCtrl.newCont.book.title" />
                            <label class="control-label h4" for="txtPagesCount">Pages Count</label>
                            <input class="form-control center-block" type="text" id="txtPagesCount" ng-model="contCtrl.newCont.pagesCount" />
                            <label class="control-label h4" for="txtBookURL">Book URL</label>
                            <input class="form-control center-block" type="text" id="txtBookURL" ng-model="contCtrl.newCont.bookURL" />
                            <label class="control-label h4" for="txtImageURL">Image URL</label>
                            <input class="form-control center-block" type="text" id="txtImageURL" ng-model="contCtrl.newCont.imageURL" />
                            <div class="form-group" style="padding-top:2em">
                                <input type="submit" value="Cancel" class="btn btn-danger btn-sm" ng-click="contCtrl.uiHelper.clearForm()" />
                                <input type="submit" value="Add and Share" class="btn btn-warning btn-sm"  />
                                <input type="submit" value="Add" class="btn btn-info btn-sm " ng-click="contCtrl.saveCont()" />
                            </div>
                        </div>

                    </div>
                    <div style="padding-top:2em" class="front">
                        <p class="lead" ng-hide="contCtrl.uiHelper.loaded">{{contCtrl.uiHelper.message}}</p>

                        <table class="table table-striped table-hover" align="left">
                            <thead>
                                <tr>
                                    <th class="text-center danger h4">Reader</th>
                                    <th class="text-center danger h4">Book Title</th>
                                    <th class="text-center danger h4">Read Pages</th>
                                    <th class="text-center danger h4">Progress</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="cont in contCtrl.conts">
                                    <td class="text-active h4" >{{cont.contributer.user.userName}}</td>
                                    <td class="text-active h4" >{{cont.book.title}}</td>
                                    <td class="text-active h4" >{{cont.currentPage }}</td>
                                    <td class="text-active h4" >{{cont.progress}}%</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts{
    @Scripts.Render("~/Client/autocomplete.js")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
}
