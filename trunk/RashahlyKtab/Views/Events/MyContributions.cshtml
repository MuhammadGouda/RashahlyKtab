@using Microsoft.AspNet.Identity

<div style="padding-left:100px" ng-controller="ContributionController as contCtrl" ng-init="contCtrl.getMyConts()">    
    <div class="breadcrumb h5">My Progress</div>

    <table class="table table-striped table-hover" align="left">
        <thead>
            <tr>
                <th class="text-center danger ">Book</th>
                <th class="text-center danger ">Current Page</th>
                <th class="text-center danger ">Progress</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="cont in contCtrl.myConts">
                <td class="text-active">{{cont.book.title}}</td>
                <td class="text-active">{{cont.pagesCount}}</td>
                <td class="text-active">{{cont.progress}}%</td>
            </tr>
        </tbody>
    </table>
</div>
@section scripts{
    
    @Scripts.Render("~/Scripts/Client/helper.js")
}
